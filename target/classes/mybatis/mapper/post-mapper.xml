	<!-- 게시글 자세히 보기 -->
	<select id="selectPostDetail" parameterType="int" resultType="com.kitri.market.post.vo.PostDetailVO">
		SELECT 	
			BOARDID,
			USERID,
			CATEGORYID,
			ADDRESSCODE,
			TITLE,
			CONTENT,
			REGDATE,
			PRICE,
			VIEWS, 
			FLAG
		FROM BOARD
		WHERE BOARDID = #{boardid}
	</select>
	
